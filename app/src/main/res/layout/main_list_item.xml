<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/image_movie_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:visibility="visible"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/text_null_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_movie_thumbnail"
        android:layout_alignLeft="@id/image_movie_thumbnail"
        android:layout_alignRight="@id/image_movie_thumbnail"
        android:layout_alignTop="@id/image_movie_thumbnail"
        android:background="#000000"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textsize_middle"
        android:visibility="invisible"/>

</RelativeLayout>